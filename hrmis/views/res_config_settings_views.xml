<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hrmis_res_config_settings_view_form" model="ir.ui.view">
            <field name="name">Settings</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="wecom_contacts.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <div id="hrmis_warning" position="replace" />
                <!-- <xpath expr="//div[@id='hrmis_install']//div[@id='hrmis_warning']" position="replace"/> -->


                <div id="hrmis_install" position="after">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <i class="fa fa-th fa-lg" aria-label="Hr related menus"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <span class="o_form_label">Hide HR related menus</span>
                                <div class="row">
                                    <div class="text-muted col-md-12">
                                    The menu is rebuilt. It is recommended to hide the original HR menu.
                                    </div>
                                </div>
                            </div>
                            <hr/>
                            <button name="%(hrmis.action_view_hr_menu)d" icon="fa-arrow-right" type="action" string="Hide the menu" class="btn-link"/>
                            <button class="oe_highlight ml-1" name="hide_hr_menu" string=" One click Hide Menu" type="object" icon="fa-eye-slash" />
                        </div>
                    </div>

                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="del_wecom_tag"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="del_wecom_tag"/>
                            <div class="row">
                                <div class="text-muted col-md-12">
                                    If selected, deleting the local tag record will delete the tag of remote enterprise wechat at the same time.Default <b class="text-warning">disable</b>.
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </field>
        </record>

    </data>
</odoo>