<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">Settings</field>
            <field name="model">res.config.settings</field>

            <field name="inherit_id" ref="hr_recruitment.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='hr_recruitment']" position="replace">
                    <div id="publish_available_jobs_setting" class="d-none"/>
                    <div id="interview_forms" class="d-none"/>
                </xpath>
            </field>
        </record>

        <record id="hrms_recruitment_res_config_settings_view_form" model="ir.ui.view">
            <field name="name">Settings</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="hrms_base.hrms_base_res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <div id="hrms_recruitment_warning" position="replace"/>

                <xpath expr="(//div[hasclass('o_settings_container')])[last()]" position="after">
                    <h2 id="hrms_recruitment" class="bg-info d-flex justify-content-between" groups="hr_recruitment.group_hr_recruitment_manager">
                        <span class="text-left">
                            <i class="fa fa-user-plus fa-lg" aria-label="Recruitment" />
                                Recruitment
                        </span>
                        <widget name='res_config_hrms_navigation_gotop'/>
                    </h2>
                    <h2 groups="hr_recruitment.group_hr_recruitment_manager">Job Posting</h2>
                    <div class="row mt16 o_settings_container" name="online_posting_setting_container" groups="hr_recruitment.group_hr_recruitment_manager">
                        <div class="col-12 col-lg-6 o_setting_box" id="publish_available_jobs_setting">
                            <div class="o_setting_left_pane">
                                <field name="module_website_hr_recruitment"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_website_hr_recruitment" string="Online Posting"/>
                                <div class="text-muted">
                                    Publish available jobs on your website
                                </div>
                            </div>
                        </div>
                    </div>
                    <h2 groups="hr_recruitment.group_hr_recruitment_manager">Recruitment Process</h2>
                    <div class="row mt16 o_settings_container" name="recruitment_process_div" groups="hr_recruitment.group_hr_recruitment_manager">
                        <div class="col-12 col-lg-6 o_setting_box" id="interview_forms_setting" title="Use interview forms tailored to each job position during the recruitment process. Select the form to use in the job position detail form. This relies on the Survey app.">
                            <div class="o_setting_left_pane">
                                <field name="module_hrms_recruitment_survey"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_hrms_recruitment_survey" string="Send Interview Survey"/>
                                <div class="text-muted">
                                    Send an Interview Survey to the applicant during the recruitment process
                                </div>
                                <div class="content-group" id="interview_forms"/>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>